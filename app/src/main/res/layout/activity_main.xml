<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sam"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:text="Unveil the character"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"/>

    <ImageView
        android:id="@+id/Imagetobedisplayed"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/sammmy"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/Namtobedisplayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Imagetobedisplayed"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Namtobedisplayed"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Unveil" />


 </RelativeLayout>